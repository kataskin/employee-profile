.js-skills
  padding-top 27px

.js-skills__title
  margin 30px 0 35px 10px
  font-size 22px
  line-height 28px
  color #2f1b15
  font-weight 700

.js-skills__scale
  position relative
  display flex
  align-items flex-start
  max-width 760px
  margin-left 11px
  padding-top 5px
  background url('../img/line1.png') top 3px left -4px repeat-X
  cursor pointer

.js-skills__slider
  position absolute
  top -10px
  width 17px
  height 14px
  background url('../img/slider.png') center center no-repeat
  cursor pointer

.js-skills__item
  position relative
  width 147px

  &::before
    content ''
    position absolute
    top 2px
    display block
    width 3px
    height 25px
    background-color #41261f

  &--middle
    width 225px

  &--middle::before
    left 3px
    height 12px

  &--last
    margin-left auto
    text-align right

  &--last::before
    top 1px
    right 0
    height 26px

.js-skills__level
  position relative
  display block
  max-width 175px
  margin-top 30px
  font-size 13px
  line-height 20px
  color #2f1b15
  font-weight 700

  .js-skills__item--first &
    top 2px

  .js-skills__item--last &
    top 7px
    left 4px
